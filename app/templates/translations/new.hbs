<tr>
  <td>
    {{#if hasRule}}
      {{#with model.rule}}
      {{partial type}}
      {{/with}}
    {{else}}
      <button {{action 'addRule' 'always'}}>always</button>
      <button {{action 'addRule' 'period'}}>period</button>
    {{/if}}
  </td>
  <td>
    {{input value=model.target placeholder='www.example.com'}}
  </td>
  <td>
    <i>n/a</i>
  </td>
  <td>
    <button {{action 'add' translation.priority}}>{{fa-icon "arrow-up"}} add</button>
  </td>
</tr>
